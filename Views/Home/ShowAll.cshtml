
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ShowAll</title>
    <style>
        .tableData {
            border-left: solid 1px #D8C3C3;
            border-top: solid 1px #D8C3C3;
        }

            .tableData tr {
            }

            .tableData td, .tableData th {
                border-right: solid 1px #D8C3C3;
                border-bottom: solid 1px #D8C3C3;
                text-align: left;
                padding: 5px;
            }

            .tableData td {
            }

            .tableData th {
                background-color: #FAFAFA;
                padding: 7px 5px;
                border-bottom-color: #9C9C9C;
            }

        .odd {
            background-color: #f3f3f3;
        }

        .even {
            background-color: #ffffff;
        }
    </style>

</head>

<body ng-app="empAPP">
    <div ng-controller="empController">
        <div id="searchBox">
            Search : <input class="form-control" ng-model="searchText" placeholder="Search Grid" />
        </div>
        <table class="tableData">
            <thead>
                <tr>
                    <th>Sr no.</th>
                    <th>Name</th>
                    <th>Manager</th>
                    <th>Data of Joining</th>
                    <th>Department</th>
                    <th>Designation</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="e in emp | filter: searchText ">
                    <td>{{ $index + 1 }}</td>
                    <td>{{ e.FirstName + " " + e.LastName }}</td>
                    <td>{{ e.ReportingManager }}</td>
                    <td>{{ e.DateOfJoining | date: "dd/MM/yyyy" }}</td>
                    <td>{{ e.Department }}</td>
                    <td>{{ e.Designation }}</td>
                    <td>
                        <a href="/Home/update_Record?id={{ e.id }}">Update</a> | 
                        <a href="/Home/DeleteRecord?id={{ e.id }}">Delete</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/Angular/EMP.js"></script>
</body>
</html>
